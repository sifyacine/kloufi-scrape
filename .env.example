# ==============================================================================
# KLOUFI-SCRAPE ENVIRONMENT CONFIGURATION (.env.example)
# ==============================================================================
# Instructions:
# 1. Copy this file to .env
# 2. Update the values below with your specific configuration
# ==============================================================================

# ------------------------------------------------------------------------------
# ENVIRONMENT & CORE
# ------------------------------------------------------------------------------
KLOUFI_ENV=local           # local, production, or docker
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ------------------------------------------------------------------------------
# ELASTICSEARCH (For insert2db)
# ------------------------------------------------------------------------------
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_password_here
ELASTICSEARCH_VERIFY_CERTS=false

# ------------------------------------------------------------------------------
# REDIS (For distributed state management)
# ------------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ------------------------------------------------------------------------------
# PROXY CONFIGURATION (Optional - used in ouedkniss scraper)
# ------------------------------------------------------------------------------
# If you want to use a specific test proxy instead of fetching from sources
TEST_PROXY=http://proenas.synology.me:3128
USE_TEST_PROXY_ONLY=true

# ------------------------------------------------------------------------------
# ALERTING - TELEGRAM (Optional)
# ------------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ------------------------------------------------------------------------------
# ALERTING - EMAIL (Optional)
# ------------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL=

# ------------------------------------------------------------------------------
# SCHEDULING
# ------------------------------------------------------------------------------
CONTINUOUS_MODE=true        # Whether to run in a continuous loop
CYCLE_DELAY=3600            # Seconds between full scrape cycles
MAX_CATEGORY_RUNTIME=7200   # Max seconds to spend on one category
